<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimen_8dp"
    android:paddingRight="@dimen/dimen_8dp">


    <LinearLayout
        android:id="@+id/parentView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_4dp"
        android:paddingRight="@dimen/dimen_4dp"
        android:paddingTop="@dimen/dimen_4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_4dp">

            <com.androidapp.jdklokhandwala.custom.TfTextView
                android:id="@+id/referCodeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="20X40 ISI 1Kg"
                android:textColor="@color/black"
                android:textSize="@dimen/XL_TEXT" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/netAmountTV"
                android:src="@drawable/ic_rupee"
                android:tint="@color/black" />

            <com.androidapp.jdklokhandwala.custom.TfTextView
                android:id="@+id/netAmountTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="New Amount"
                android:textColor="@color/black"
                android:textSize="@dimen/L_TEXT" />

        </RelativeLayout>

        <com.androidapp.jdklokhandwala.custom.TfTextView
            android:id="@+id/createdDateTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="@dimen/M_TEXT" />



        <com.androidapp.jdklokhandwala.custom.TfTextView
            android:padding="@dimen/dimen_4dp"
            android:id="@+id/totalWeightTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="total weight"
            android:textSize="@dimen/L_TEXT" />

        <com.androidapp.jdklokhandwala.custom.TfTextView
            android:padding="@dimen/dimen_4dp"
            android:id="@+id/statusTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="status"
            android:textSize="@dimen/M_TEXT" />

    </LinearLayout>
</LinearLayout>