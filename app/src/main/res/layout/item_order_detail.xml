<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/dimen_8dp">

    <com.androidapp.jdklokhandwala.custom.TfTextView
        android:id="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="20 X 13"
        android:textSize="@dimen/L_TEXT" />

    <com.androidapp.jdklokhandwala.custom.TfTextView
        android:id="@+id/txtUnitValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unit Value : 13 Ft."
        android:textSize="@dimen/L_TEXT" />

    <com.androidapp.jdklokhandwala.custom.TfTextView
        android:id="@+id/txtKgWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kg Weight : 13.3 Kg"
        android:textSize="@dimen/L_TEXT" />

    <com.androidapp.jdklokhandwala.custom.TfTextView
        android:id="@+id/txtCPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Market Price : 1000"
        android:textSize="@dimen/L_TEXT"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/priceView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.androidapp.jdklokhandwala.custom.TfTextView
            android:id="@+id/txtxLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price :"
            android:layout_centerVertical="true"
            android:textSize="@dimen/L_TEXT" />

        <com.androidapp.jdklokhandwala.custom.TfTextView
            android:id="@+id/txtPrice"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtxLabel"
            android:text="6000"
            android:textSize="@dimen/L_TEXT" />
    </RelativeLayout>
</LinearLayout>