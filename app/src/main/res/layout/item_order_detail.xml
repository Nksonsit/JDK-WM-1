<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/dimen_8dp"
    android:orientation="vertical">

    <com.androidapp.jdklokhandwala.custom.TfTextView
        android:id="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="20 X 13"
        android:textSize="@dimen/L_TEXT" />

    <com.androidapp.jdklokhandwala.custom.TfTextView
        android:id="@+id/txtUnitValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unit Value : 13 Ft."
        android:textSize="@dimen/L_TEXT" />

    <com.androidapp.jdklokhandwala.custom.TfTextView
        android:id="@+id/txtKgWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kg Weight : 13.3 Kg"
        android:textSize="@dimen/L_TEXT" />

    <com.androidapp.jdklokhandwala.custom.TfTextView
        android:id="@+id/txtCPrice"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Market Price : 1000"
        android:textSize="@dimen/L_TEXT" />

    <com.androidapp.jdklokhandwala.custom.TfTextView
        android:id="@+id/txtPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price : 6000"
        android:textSize="@dimen/L_TEXT" />

    <View
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dimen_4dp"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:layout_height="@dimen/dimen_.5dp"
        android:layout_marginLeft="@dimen/dimen_8dp"
        android:layout_marginRight="@dimen/dimen_8dp"
        android:background="@color/half_black" />

</LinearLayout>