<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/off_white</item>
    </style>

    <style name="MyToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="colorControlNormal">@color/white</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="list_item_appearance">
        <item name="android:textSize">@dimen/L_TEXT</item>
        <item name="android:textColor">@color/half_black</item>
    </style>


    <style name="Custom" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Loadingâ€¦</item>
        <item name="DialogSpotColor">@color/colorPrimary</item>
        <item name="DialogSpotCount">4</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textSize">@dimen/M_TEXT</item>
        <item name="android:layout_margin">@dimen/dimen_4dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
